<UserControl x:Class="ShearWallVisualizer.Controls.WallSystemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShearWallVisualizer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Orientation="Vertical">
        <Label Content="WALLS" Background="MediumBlue" Foreground="White" Opacity="0.5" Margin="0 10 0 0"/>
        <StackPanel Orientation="Horizontal" Background="AliceBlue" >
            <Label FontSize="10" Width="20" Height="20" Margin="5 1 5 1" />
            <Label FontSize="10" Width="50" Height="25" FontWeight="Bold" Margin="5 1 5 1" Content="ID"/>
            <Label FontSize="10" Width="50" Height="25" FontWeight="Bold" Margin="5 1 5 1" Content="Type"/>
            <Label FontSize="10" Width="75" Height="25" FontWeight="Bold" Margin="5 1 5 1" Content="Length (ft)"/>
            <Label FontSize="10" Width="75" Height="25" FontWeight="Bold" Margin="5 1 5 1" Content="Height (ft)"/>
            <Label FontSize="10" Width="100" Height="25" FontWeight="Bold" Margin="5 1 5 1" Content="Start Pt (ft, ft)"/>
            <Label FontSize="10" Width="100" Height="25" FontWeight="Bold" Margin="5 1 5 1" Content="End Pt (ft, ft)"/>
        </StackPanel>
        <StackPanel Name="sp_Walls" Orientation="Vertical"/>
    </StackPanel>
</UserControl>
