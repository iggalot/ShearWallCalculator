<UserControl x:Class="ShearWallVisualizer.Controls.DiaphragmSystemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShearWallVisualizer.Controls"
             mc:Ignorable="d" >
    <StackPanel Orientation="Vertical">
        <Label Content="DIAPHRAGMS" Background="Red" Opacity="0.5" Foreground="White" Margin="0 10 0 0"/>

        <StackPanel Orientation="Horizontal" Background="AliceBlue" >
            <Label Width="20" FontSize="10" Height="20" Margin="5 1 5 1" />
            <Label Width="40" FontSize="10" Height="25" FontWeight="Bold" Margin="5 1 5 1" Content="ID"/>
            <Label Width="85" FontSize="10" Height="25" FontWeight="Bold" Margin="5 1 5 1" Content="Type"/>
            <Label Width="60" FontSize="10" Height="25" FontWeight="Bold" Margin="5 1 5 1" Content="Length (ft)"/>
            <Label Width="75" FontSize="10" Height="25" FontWeight="Bold" Margin="5 1 5 1" Content="Width (ft)"/>
            <Label Width="80" FontSize="10" Height="25" FontWeight="Bold" Margin="5 1 5 1" Content="P1 (ft, ft)"/>
            <Label Width="80" FontSize="10" Height="25" FontWeight="Bold" Margin="5 1 5 1" Content="P2 (ft, ft)"/>
            <Label Width="80" FontSize="10" Height="25" FontWeight="Bold" Margin="5 1 5 1" Content="P3 (ft, ft)"/>
            <Label Width="85" FontSize="10" Height="25" FontWeight="Bold" Margin="5 1 5 1" Content="P4 (ft, ft)"/>
        </StackPanel>
        
        <StackPanel Name="sp_Diaphragms" Orientation="Vertical"/>
    </StackPanel>
</UserControl>
